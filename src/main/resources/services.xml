<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


    <bean id="heavyQuestion"
          class="com.thobho.tut.spring.core.beans.HeavyQuestion" scope="singleton">
        <property name="question" value="What is a meaning of life?"/>
        <!-- additional collaborators and configuration for this bean go here -->
    </bean>

    <bean id="polish_philosopher" class="com.thobho.tut.spring.core.beans.Philosopher">
        <property name="name" value="janusz"/>
        <property name="mostImportantQuestion" ref="heavyQuestion"/>
        <property name="attributes">
            <list>
                <bean class="com.thobho.tut.spring.core.beans.PhilosopherAttribute" scope="prototype">
                    <constructor-arg type="java.lang.String" value="ksiazka"/>
                    <constructor-arg name="cost" value="12"/>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="russian_philosopher" class="com.thobho.tut.spring.core.beans.Philosopher"
          primary="true">
        <property name="name" value="andriej"/>
        <property name="mostImportantQuestion" ref="heavyQuestion"/>
        <property name="attributes">
            <list>
                <bean class="com.thobho.tut.spring.core.beans.PhilosopherAttribute" scope="prototype">
                    <constructor-arg type="java.lang.String" value="marynarka"/>
                    <constructor-arg name="cost" value="15"/>
                </bean>
                <bean class="com.thobho.tut.spring.core.beans.PhilosopherAttribute" scope="prototype">
                    <constructor-arg type="java.lang.String" value="ksiazka"/>
                    <constructor-arg name="cost" value="12"/>
                </bean>
            </list>
        </property>
    </bean>


    <bean id="german_philosopher" class="com.thobho.tut.spring.core.beans.Philosopher"
          init-method="afterPropertiesSet">
        <property name="name" value="janusz"/>
    </bean>

    <bean class="com.thobho.tut.spring.core.beans.PhylosophyBeanPostProcessor"/>
</beans>